<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h2><%= flight.flightNo %> </h2>
  <section>
    <tbody>
        <tr>
          <td>Airline:</td>
          <td><%= flight.airline %>  /  </td>
          <td>Airport:</td>
          <td><%= flight.airport %>  /  </td>
          <td>Departs:</td> 
          <td><%= flight.departs %></td>
          <td></td>
        </tr>
      </tbody>
  </section>
  <section>
    <form
      id="add-ticket-form"
      action="/flights/<%= flight._id  %>/tickets"
      method="POST"
      >
      <label for="seat-select">Seat:</label> 
      <input name="seat" id="seat-select" required pattern="[A-F][1-9]\d?">
      <label for="price-select">Price:</label>
      <input name="price" id="price-select">
      <button type="submit">Add Ticket</button>
    </form>
  </section>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>All Seats Available</h3>
  <% } %>
  
  <a href="/flights/<%= flight._id %>/edit ">Edit Flight</a>
  <h3><a href="/flights">Go Back</a></h3>
</main>
<%- include('../partials/footer') %>