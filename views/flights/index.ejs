<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <main>
    <h1>Flight List</h1>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight No.</th>
          <th>Departure</th>
          <th></th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(flight => { %>
          <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><%= flight.flightNo %></a></td>
            <td><%= flight.departs %></td>
            <td><a href="/flights/<%= flight._id %>" <%- title === 'Flight Details' ? 'class="active"' : '' %>>Details</a></td>
            <td><form action="/flights/<%= flight._id %>?_method=DELETE" class="delete-form" method="POST">
              <button type="submit">x</button>
            </form></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

<%- include('../partials/footer') %>