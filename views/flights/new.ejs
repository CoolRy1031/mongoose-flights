<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="test" name="airline" id="airline-input" required>
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input" default value="DEN">
    <label for="flight-No-select">Flight No:</label>
    <input type="text" name="flightNo" id="flight-No-input">
    <label for="date-input">Date:</label>
    <input type="datetime-local" name="departs" value="departsDate" id="departs-input">
    <button type="submit">Add Flights</button>
  </form>
</main>

<%- include('../partials/footer') %> 