<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-input">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-input" default value="DEN">
      <option value="DEN">DEN</option>
      <option value="DFW">DFW</option>
      <option value="AUS">AUS</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="ATL">ATL</option>
    </select>
    <label for="flight-No-select">Flight No:</label>
    <input type="text" name="flightNo" id="flight-No-input">
    <label for="date-input">Date:</label>
    <input type="datetime-local" name="departs" value="departsDate" id="departs-input">
    <button type="submit">Add Flights</button>
  </form>
</main>

<%- include('../partials/footer') %> 